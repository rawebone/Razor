{
    "name": "rawebone/razor",
    "description": "A tiny framework for writing simple, testable applications",
    "license": "MIT",
    "authors": [
        {
            "name": "Nick Rawe",
            "email": "rawebone@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "rawebone/injector": "dev-master",
        "symfony/http-foundation": "2.4.*",
        "symfony/debug": "2.4.*",
        "phpspec/prophecy": "1.*"
    },
    "require-dev": {
        "phpspec/phpspec": "2.*"
    },
    "autoload": {
        "psr-0": {
            "Razor\\": [ "src/" ],
            "": [ "spec/" ]
        }
    }
}
